<MudGrid  style="position: fixed; bottom: 0; width: 100%; padding: 10px; background-color: #f5f5f5; border-top: 1px solid #ccc;">
    <!-- File Icon on the Left -->
  

    <!-- Text Input Field for Message -->
    <MudItem xs="8">
        
        <MudTextField @bind-Value="messageText" Placeholder="Type a message..." Margin="Margin.Dense" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.EmojiEmotions" />
    </MudItem>

    <!-- Voice Recording Icon -->


    <!-- Send Message Icon -->
    <MudItem xs="2">
        <MudIconButton Icon="@Icons.Material.Filled.Mic" Color="Color.Default" OnClick="RecordVoice" />
    </MudItem>
    <MudItem xs="2">
        <MudIconButton Icon="@Icons.Material.Filled.Send" Color="Color.Primary" OnClick="SendMessage" Disabled="@string.IsNullOrWhiteSpace(messageText)" />
    </MudItem>
</MudGrid>

