</div>


<MudAppBar Bottom="true" Fixed="true" Style="background-color:white" Elevation="1">


    <MudIconButton Icon="@Icons.Material.Rounded.RssFeed" Color="Color.Warning" Edge="Edge.End" />


    <MudSpacer />
    <MudIconButton Icon="@Icons.Material.Filled.FavoriteBorder" Color="Color.Warning" Edge="Edge.Start" />

